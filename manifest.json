{
  "manifest_version": 3,
  "name": "YaKlass Resolver",
  "version": "0.36.0.0",
  "version_name": "alpha 0.36-or",
  "description": "Xexe With love, Rozy",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": [
    "https://openrouter.ai/api/*",
    "https://www.yaklass.ru/*",
    "https://*.yaklass.ru/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.yaklass.ru/*"],
      "js": ["content.js"],
      "css": ["notification.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}